CSOURCES:=$(shell find src -name *.c)
COBJECTS:=$(patsubst %.c, %.o, $(CSOURCES))
CPPSOURCES:=$(shell find src -name *.cpp)
CPPOBJECTS:=$(patsubst %.cpp, %.o, $(CPPSOURCES))
SSOURCES:=$(shell find src -name *.s)
SOBJECTS:=$(patsubst %.s, %.o, $(SSOURCES))

export
ARCH:=64
CC:=$(shell echo $$HOME)/opt/cross/bin/x86_64-elf-gcc
CPP:=$(shell echo $$HOME)/opt/cross/bin/x86_64-elf-gcc
LD:=$(shell echo $$HOME)/opt/cross/bin/x86_64-elf-gcc
AS:=$(shell echo $$HOME)/opt/cross/bin/x86_64-elf-as
AR:=$(shell echo $$HOME)/opt/cross/bin/x86_64-elf-ar
#CPP=clang

all: build runem

build: clean check $(COBJECTS) $(CPPOBJECTS) $(SOBJECTS) build_libs link mkiso


WFLAGSON=-Wall -Wextra -Werror=return-type -Wshadow -Wframe-larger-than=16384 -Wdeprecated -Wredundant-decls
WFLAGSOFF=-Wno-sequence-point -Wno-unused-parameter -Wno-sign-compare
FFLAGS=-fno-omit-frame-pointer -ffreestanding -fno-rtti -fno-exceptions -fno-stack-protector
DFLAGS=-DARCH=_x64 -DVENDOR=_PC -DDEBUG
MFLAGS=-mcmodel=kernel -mno-red-zone -mno-sse3 -mno-3dnow
IFLAGS=-Isrc/stdlib/include -Isrc/hal -Isrc/arch -Isrc/vendor
CFLAGS=-O2 -std=c99 $(DFLAGS) $(WFLAGSON) $(WFLAGSOFF) $(FFLAGS) $(MFLAGS) $(IFLAGS)
CPPFLAGS=-O2 -std=c++11 $(DFLAGS) $(WFLAGSON) $(WFLAGSOFF) $(FFLAGS) $(MFLAGS) $(IFLAGS)
LDFLAGS=-static -Tlinkx64.ld -z max-page-size=0x1000 -ffreestanding -O2 -nostdlib $(FFLAGS) -Llibs
ASFLAGS=-felf64


clean:
	@echo Cleaning workspace
	@find . -name '*.o' -delete
	@rm -f kernel64

check:
	#@tools/doccheck.py kernel src
link:
	@echo Linking
	@$(LD) $(LDFLAGS) -o kernel64 $(SOBJECTS) $(COBJECTS) $(CPPOBJECTS) -lgcc

.s.o:
	@echo Assembling $(patsubst %.o, %.s, $@)
	@cpp $(CPPFLAGS) -E -P -o $(patsubst %.o, %.cpps, $@) $(patsubst %.o, %.s, $@)
	@nasm $(ASFLAGS) $(patsubst %.o, %.cpps, $@) -o $@
	@rm $(patsubst %.o, %.cpps, $@)

.c.o:
	@echo Compiling $<
	@$(CC) $(CFLAGS) -o $@ -c $<

.cpp.o:
	@echo Compiling $<
	@$(CPP) $(CPPFLAGS) -o $@ -c $<

mkiso:
	#@tools/packrd.py
	@tools/symexport.py 64BIT kernel64
	@cp -f kernel64 iso/kernel64
	@cp -f kernel64.sym iso/kernel64.sym
	#@cp -f initrd.rd iso/initrd.rd

runem:
	@~/bochs-2.6.2/bochs -f bochs.rc -q
	#@cd .&& bash scripts/run_emulator64 `pwd` &

build_libs:
	#cd libs/hal && $(MAKE)