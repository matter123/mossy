CSOURCES:=$(shell find src -name *.c)
COBJECTS:=$(patsubst %.c, %.o, $(CSOURCES))
CXXSOURCES:=$(shell find src -name *.cpp)
CXXOBJECTS:=$(patsubst %.cpp, %.o, $(CXXSOURCES))
SSOURCES:=$(shell find src -name *.s)
SOBJECTS:=$(patsubst %.s, %.o, $(SSOURCES))

export
ARCH=86
VENDOR=PC
OBJ_SUFFIX:=$(ARCH)_$(VENDOR)
CC:=$(shell echo $$HOME)/opt/cross/bin/i586-elf-gcc
CXX:=$(shell echo $$HOME)/opt/cross/bin/i586-elf-g++
CPP:=$(shell echo $$HOME)/opt/cross/bin/i586-elf-cpp
LD:=$(shell echo $$HOME)/opt/cross/bin/i586-elf-gcc
AS:=$(shell echo $$HOME)/opt/cross/bin/i586-elf-as
GAR:=$(shell echo $$HOME)/opt/cross/bin/i586-elf-ar
#CXX=clang

all: build runem

build: clean check $(COBJECTS) $(CXXOBJECTS) $(SOBJECTS) build_libs link mkiso

FFLAGS=-fno-omit-frame-pointer -ffreestanding -fno-stack-protector -fno-common
DFLAGS=-DARCH=_x86 -DVENDOR=_PC -DDEBUG
CFLAGS=-O3 -std=c99 $(DFLAGS) $(WFLAGSON) $(WFLAGSOFF) $(FFLAGS) $(IFLAGS)
CXXFLAGS=-O3 -std=c++1y $(DFLAGS) $(WFLAGSON) $(WFLAGSOFF) $(FFLAGS) $(IFLAGS) -fno-rtti \
-fno-exceptions -fdiagnostics-color=auto
LDFLAGS=-static -Tlinkx86.ld -z max-page-size=0x1000 -ffreestanding -O2 -nostdlib $(FFLAGS) -Llibs
ASFLAGS=-felf


clean:
	@echo Cleaning workspace
	@find . -name '*.o' -delete
	@rm -f kernel$(ARCH)

check:
	#@tools/doccheck.py kernel src
link:
	@echo Linking
	@$(LD) $(LDFLAGS) -o kernel$(OBJ_SUFFIX) $(SOBJECTS) $(COBJECTS) $(CXXOBJECTS) -lc$(OBJ_SUFFIX) -lgcc

.s.o:
	@echo Assembling $(patsubst %.o, %.s, $@)
	@$(CPP) $(CXXFLAGS) -E -P -o $(patsubst %.o, %.cpps, $@) $(patsubst %.o, %.s, $@)
	@nasm $(ASFLAGS) $(patsubst %.o, %.cpps, $@) -o $@
	@rm $(patsubst %.o, %.cpps, $@)

.c.o:
	@echo Compiling $<
	@$(CC) $(CFLAGS) -o $@ -c $<

.cpp.o:
	@echo Compiling $<
	@$(CXX) $(CXXFLAGS) -o $@ -c $<

mkiso:
	#@tools/packrd.py
	#@tools/symexport.py kernel$(OBJ_SUFFIX)
	@cp -f kernel$(OBJ_SUFFIX) iso/kernel$(OBJ_SUFFIX)
	@cp -f kernel$(OBJ_SUFFIX).sym iso/kernel$(OBJ_SUFFIX).sym
	#@cp -f initrd.rd iso/initrd.rd

runem:
	@~/bochs-2.6.2/bochs -f bochs.rc -q
	#@cd .&& bash scripts/run_emulator64 `pwd` &

build_libs:
	cd libs/clib && $(MAKE) build
