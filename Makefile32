CSOURCES:=$(shell find src -name *.c)
COBJECTS:=$(patsubst %.c, %.o, $(CSOURCES))
CXXSOURCES:=$(shell find src -name *.cpp)
CXXOBJECTS:=$(patsubst %.cpp, %.o, $(CXXSOURCES))
SSOURCES:=$(shell find src -name *.s)
SOBJECTS:=$(patsubst %.s, %.o, $(SSOURCES))

export
ARCH=86
VENDOR=PC
OBJ_SUFFIX:=$(ARCH)_$(VENDOR)
ClangXX:=clang++ --target=i686-elf -Wdocumentation
Clang:=clang --target=i686-elf -Wdocumentation
CC:=$(Clang)
CXX:=$(ClangXX)


all: build runem

build: clean $(COBJECTS) $(CXXOBJECTS) $(SOBJECTS) build_libs link mkiso

FFLAGS=-fno-omit-frame-pointer -ffreestanding -fno-stack-protector -fno-common
DFLAGS=-DARCH=_x86 -DVENDOR=_PC -DDEBUG
CFLAGS=-O3 -std=c11 $(DFLAGS) $(WFLAGSON) $(WFLAGSOFF) $(FFLAGS) $(IFLAGS)
CXXFLAGS=-O3 -std=gnu++11 $(DFLAGS) $(WFLAGSON) $(WFLAGSOFF) $(FFLAGS) $(IFLAGS) -fno-rtti \
-fno-exceptions -fdiagnostics-color=auto
LDFLAGS=-static -Tlinkx86.ld  -ffreestanding -O2 -nostdlib $(FFLAGS) -Llibs
ASFLAGS=-felf


clean:
	@echo Cleaning workspace
	@find . -name '*.o' -delete
	@rm -f kernel$(ARCH)

link:
	@echo Linking
	@$(CXX) $(LDFLAGS) -o kernel$(OBJ_SUFFIX) $(SOBJECTS) $(COBJECTS) $(CXXOBJECTS) -lc$(OBJ_SUFFIX)\
	 -lencode$(OBJ_SUFFIX) -lacpi$(OBJ_SUFFIX) -lgcc

.s.o:
	@echo Assembling $(patsubst %.o, %.s, $@)
	@cpp $(DFLAGS) $(IFLAGS) -DASM -E -P$(patsubst %.o, %.s, $@) -o$(patsubst %.o, %.cpps, $@)
	@nasm $(ASFLAGS) $(patsubst %.o, %.cpps, $@) -o $@
	@rm $(patsubst %.o, %.cpps, $@)

%.o: %.c
	@echo Compiling $<
	@$(Clang) $(CFLAGS) -o $@ -c $<

%.o: %.cpp
	@echo Compiling $<
	@$(ClangXX) $(CXXFLAGS) -o $@ -c $<

mkiso:
	#@tools/packrd.py
	#@tools/symexport.py kernel$(OBJ_SUFFIX)
	@cp -f kernel$(OBJ_SUFFIX) iso/kernel$(OBJ_SUFFIX)
	@cp -f kernel$(OBJ_SUFFIX).sym iso/kernel$(OBJ_SUFFIX).sym
	#@cp -f initrd.rd iso/initrd.rd

runem:
	@~/bochs-2.6.2/bochs -f bochs.rc -q
	#@cd .&& bash scripts/run_emulator64 `pwd` &

build_libs:
	cd libs/clib && $(MAKE) build
	cd libs/encode && $(MAKE) build
	cd libs/acpi && $(MAKE) build
